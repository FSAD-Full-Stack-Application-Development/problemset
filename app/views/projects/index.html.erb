            margin-bottom: 40px;
        }
        .project-card {
            border: 2px solid #e8f5e8;
            border-radius: 12px;
            padding: 25px;
            background: linear-gradient(135deg, #f8fff8 0%, #fffaf7 100%);
            box-shadow: 0 3px 10px rgba(136, 201, 153, 0.1);
            transition: all 0.3s ease;
        }
        .project-card:hover {
            border-color: #88c999;
            box-shadow: 0 8px 25px rgba(136, 201, 153, 0.2);
            transform: translateY(-3px);
        }
        .project-number {
            display: inline-block;
            background: linear-gradient(135deg, #88c999, #ffb347);
            color: white;
            padding: 8px 16px;
            border-radius: 20px;
            font-weight: bold;
            font-size: 0.9em;
            margin-bottom: 15px;
        }
        .project-title {
